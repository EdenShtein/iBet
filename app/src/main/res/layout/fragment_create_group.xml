<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/create_group"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGroupFragment">

    <NumberPicker
        android:id="@+id/create_group_picker4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="12dp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintBottom_toTopOf="@+id/create_group_back_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/create_group_picker3"
        app:layout_constraintTop_toBottomOf="@+id/create_group_picker2"
        tools:ignore="MissingConstraints"></NumberPicker>

    <NumberPicker
        android:id="@+id/create_group_picker3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="20dp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintBottom_toTopOf="@+id/create_group_create_btn"
        app:layout_constraintEnd_toStartOf="@+id/create_group_picker4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_picker1"
        tools:ignore="MissingConstraints"></NumberPicker>

    <NumberPicker
        android:id="@+id/create_group_picker2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="34dp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintBottom_toTopOf="@+id/create_group_picker4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/create_group_picker1"
        app:layout_constraintTop_toBottomOf="@+id/create_group_input_name"
        tools:ignore="MissingConstraints"></NumberPicker>

    <TextView
        android:id="@+id/create_group_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="12dp"
        android:text="Group Name"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/create_group_input_name"
        app:layout_constraintEnd_toEndOf="@+id/create_group_league"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/create_group_league"
        android:layout_width="178dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="28dp"
        android:text="League"
        android:textColor="#4CAF50"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/create_group_league_dropdown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_input_name" />

    <EditText
        android:id="@+id/create_group_input_name"
        android:layout_width="365dp"
        android:layout_height="0dp"
        android:layout_marginTop="72dp"
        android:layout_marginBottom="176dp"
        android:ems="10"
        android:hint="Enter Your Group Name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/create_group_picker2"
        app:layout_constraintEnd_toEndOf="@+id/create_group_league"
        app:layout_constraintStart_toEndOf="@+id/create_group_league"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/create_group_league_dropdown"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="49dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/create_group_picker1"
        app:layout_constraintEnd_toStartOf="@+id/create_group_picker2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_league" />

    <Button
        android:id="@+id/create_group_create_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="37dp"
        android:text="Create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/create_group_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_picker3" />

    <Button
        android:id="@+id/create_group_back_btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="33dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/create_group_create_btn"
        app:layout_constraintTop_toBottomOf="@+id/create_group_picker4" />

    <NumberPicker
        android:id="@+id/create_group_picker1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="26dp"
        android:theme="@style/NumberPickerTheme"
        app:layout_constraintBottom_toTopOf="@+id/create_group_picker3"
        app:layout_constraintEnd_toStartOf="@+id/create_group_picker2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_league_dropdown"
        tools:ignore="MissingConstraints"></NumberPicker>

</androidx.constraintlayout.widget.ConstraintLayout>